<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fontify="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:id="@+id/container"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/report_bg"
        android:layout_marginTop="15dp">

        <utils.TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            fontify:font="fonts/Gotham-Bold.otf"
            android:textColor="#fff"
            android:text="@string/name_input_text"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@+id/dialog_title"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/answer_et"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#282828"
                android:hint="@string/name_hint_text"
                android:textColorHint="#e6d8d8"
                android:background="@drawable/edittext"/>

            <ImageView
                android:id="@+id/check_btn"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:src="@drawable/green_submitn_btn"
                android:clickable="true"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>