<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center_horizontal">

            <utils.AspectRatioImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_teacher_height"
                android:src="@drawable/ic_entrance_teacher"
                android:adjustViewBounds="true"
                />

            <utils.TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/login_entrance_teacher_detail"
                android:textColor="#fff"
                fontify:font="fonts/OpenSans-Light.ttf"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/login_font_size_detail"
                />

            <ImageView
                android:id="@+id/facebook_btn"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_teacher_login_facebook"
                android:foreground="?android:attr/selectableItemBackground"/>


            <ImageView
                android:id="@+id/google_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_teacher_login_googleplus"
                android:foreground="?android:attr/selectableItemBackground"/>


        </LinearLayout>

    <ImageView
        android:id="@+id/guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_login_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="center_horizontal" />


</LinearLayout>