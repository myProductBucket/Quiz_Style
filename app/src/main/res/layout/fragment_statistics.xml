<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#f9f9f9">

    <utils.TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/statistics_title"
        android:paddingLeft="25dp"
        android:textSize="@dimen/start_quiz_textsize"
        fontify:font="fonts/Gotham-Bold.otf"
        android:textColor="#282828"/>

    <utils.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_desc"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:paddingLeft="25dp"
        android:id="@+id/description"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/start_quiz_description_textsize"
        fontify:font="fonts/OpenSans-Regular.ttf"
        android:textColor="#282828"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/description"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical"
        android:weightSum="2.15">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3.2">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/edittext">

                <utils.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_solved"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/statistics_titles_textsize"
                    fontify:font="fonts/OpenSans-Regular.ttf"
                    android:textColor="#282828"/>

                <utils.TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_taken_tv"
                    android:layout_centerInParent="true"
                    android:text="356"
                    android:textSize="@dimen/statistics_values_textsize"
                    fontify:font="fonts/Gotham-Bold.otf"
                    android:textColor="#de342b"/>


            </RelativeLayout>

            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/edittext">

                <utils.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question_solved"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/statistics_titles_textsize"
                    fontify:font="fonts/OpenSans-Regular.ttf"
                    android:textColor="#282828"/>

                <utils.TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/question_solved_tv"
                    android:layout_centerInParent="true"
                    android:text="1132"
                    android:textSize="@dimen/statistics_values_textsize"
                    fontify:font="fonts/Gotham-Bold.otf"
                    android:textColor="#de342b"/>


            </RelativeLayout>

            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/edittext">

                <utils.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average_score"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/statistics_titles_textsize"
                    fontify:font="fonts/OpenSans-Regular.ttf"
                    android:textColor="#282828"/>

                <utils.TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/average_score_tv"
                    android:layout_centerInParent="true"
                    android:text="77"
                    android:textSize="@dimen/statistics_values_textsize"
                    fontify:font="fonts/Gotham-Bold.otf"
                    android:textColor="#de342b"/>


            </RelativeLayout>




        </LinearLayout>

        <View
            android:layout_weight="0.15"
            android:layout_width="fill_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3.2">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/edittext">

                <utils.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/correct_percent"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/statistics_titles_textsize"
                    fontify:font="fonts/OpenSans-Regular.ttf"
                    android:textColor="#282828"/>

                <utils.TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/correct_percent_tv"
                    android:layout_centerInParent="true"
                    android:text="77 %"
                    android:textSize="@dimen/statistics_values_textsize"
                    fontify:font="fonts/Gotham-Bold.otf"
                    android:textColor="#de342b"/>


            </RelativeLayout>

            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/edittext">

                <utils.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average_time"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/statistics_titles_textsize"
                    fontify:font="fonts/OpenSans-Regular.ttf"
                    android:textColor="#282828"/>

                <utils.TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/average_time_tv"
                    android:layout_centerInParent="true"
                    android:text="18:36"
                    android:textSize="@dimen/statistics_values_textsize"
                    fontify:font="fonts/Gotham-Bold.otf"
                    android:textColor="#de342b"/>


            </RelativeLayout>

            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/edittext">

                <utils.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/highest_score"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/statistics_titles_textsize"
                    fontify:font="fonts/OpenSans-Regular.ttf"
                    android:textColor="#282828"/>

                <utils.TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/highest_score_tv"
                    android:layout_centerInParent="true"
                    android:text="77"
                    android:textSize="@dimen/statistics_values_textsize"
                    fontify:font="fonts/Gotham-Bold.otf"
                    android:textColor="#de342b"/>


            </RelativeLayout>




        </LinearLayout>


    </LinearLayout>

</RelativeLayout>